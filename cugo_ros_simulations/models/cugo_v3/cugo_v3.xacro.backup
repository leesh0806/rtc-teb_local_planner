  <!-- ========== 2D LiDAR Sensor ========== -->
  
  <!-- LiDAR joint (fixed to base_link) -->
  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="-0.0 0.0 0.04" rpy="0 0 0"/>
  </joint>

  <!-- LiDAR link with visual mesh -->
  <link name="base_scan">
    <visual>
      <origin xyz="0 0 0.0" rpy="0 0 -1.57"/>
      <geometry>
        <!-- ========== MODIFIED: Changed from file:// to package:// protocol ========== -->
        <mesh filename="file://$(find cugo_ros2_control)/models/cugo_v3/meshes/lds.dae" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <inertial>
      <mass value="0.114" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
    </inertial>
  </link>

  <!-- ========== MODIFIED: Ignition Gazebo GPU LiDAR Sensor ========== -->
  <!--
  Changed from Gazebo Classic ray sensor to Ignition gpu_lidar sensor
  Key differences:
  - No separate plugin tag needed
  - type="ray" -> type="gpu_lidar"
  - Uses <lidar> tag instead of <ray>
  - Direct topic specification
  - Frame ID specified with <ignition_frame_id>
  -->
  <gazebo reference="base_scan">
    <material>Gazebo/Grey</material>
    
    <!-- GPU-accelerated LiDAR sensor for better performance -->
    <sensor name="gpu_lidar" type="gpu_lidar">
      <!-- Sensor pose relative to parent link -->
      <pose>0 0 0 0 0 0</pose>
      
      <!-- ROS topic name for laser scan messages -->
      <topic>scan</topic>
      
      <!-- Update rate in Hz -->
      <update_rate>30</update_rate>
      
      <!-- Keep sensor always active -->
      <always_on>1</always_on>
      
      <!-- Visualize laser rays in Gazebo GUI -->
      <visualize>true</visualize>
      
      <!-- LiDAR configuration -->
      <lidar>
        <!-- Scan pattern configuration -->
        <scan>
          <horizontal>
            <!-- Number of laser beams -->
            <samples>400</samples>
            
            <!-- Angular resolution (1 = every sample) -->
            <resolution>1</resolution>
            
            <!-- Start angle: -180 degrees (-π radians) -->
            <min_angle>-3.141592653589793</min_angle>
            
            <!-- End angle: +180 degrees (+π radians) -->
            <!-- Full 360-degree scan -->
            <max_angle>3.141592653589793</max_angle>
          </horizontal>
        </scan>
        
        <!-- Range detection limits -->
        <range>
          <!-- Minimum detection distance in meters -->
          <min>0.10</min>
          
          <!-- Maximum detection distance in meters -->
          <max>20.0</max>
          
          <!-- Range resolution in meters -->
          <resolution>0.01</resolution>
        </range>
        
        <!-- Sensor noise model (Gaussian) -->
        <noise>
          <type>gaussian</type>
          
          <!-- Mean of noise distribution -->
          <mean>0.0</mean>
          
          <!-- Standard deviation of noise -->
          <stddev>0.01</stddev>
        </noise>
      </lidar>
      
      <!-- Frame ID for TF transformations -->
      <!-- This must match the link name for proper TF tree -->
      <ignition_frame_id>base_scan</ignition_frame_id>
    </sensor>
  </gazebo>

  <!-- ========== IMU Sensor ========== -->
  
  <!-- IMU joint (fixed to base_link) -->
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <!-- Position: centered on robot body, 15cm above base_link -->
    <origin xyz="0.0 0.0 0.15" rpy="0 0 0"/>
  </joint>

  <!-- IMU link with visual representation -->
  <link name="imu_link">
    <visual>
      <geometry>
        <!-- Small box representing IMU sensor -->
        <box size="0.03 0.03 0.02"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <geometry>
        <!-- Small box representing IMU sensor -->
        <box size="0.03 0.03 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1e-4" iyy="1e-4" izz="1e-4"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- ========== Ignition Gazebo IMU Sensor ========== -->
  <!--
  IMU sensor provides:
  - Linear acceleration (with gravity)
  - Angular velocity (gyroscope)
  - Orientation (computed from accelerometer + gyroscope)
  
  NOTE: This follows the same pattern as the LiDAR sensor above
  No separate plugin tag needed - Ignition handles it internally
  -->
  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <!-- Sensor pose relative to parent link -->
      <pose>0 0 0 0 0 0</pose>
      
      <!-- ROS topic name for IMU messages -->
      <topic>imu</topic>
      
      <!-- Update rate in Hz -->
      <update_rate>100</update_rate>
      
      <!-- Keep sensor always active -->
      <always_on>1</always_on>
      
      <!-- Visualize IMU orientation in Gazebo GUI -->
      <visualize>true</visualize>
      
      <!-- IMU configuration -->
      <imu>
        <!-- Enable orientation output -->
        <orientation_enabled>true</orientation_enabled>
        
        <!-- Angular velocity (gyroscope) noise parameters -->
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </z>
        </angular_velocity>
        
        <!-- Linear acceleration (accelerometer) noise parameters -->
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>
      
      <!-- Frame ID for TF transformations -->
      <!-- This must match the link name for proper TF tree -->
      <ignition_frame_id>imu_link</ignition_frame_id>
    </sensor>
  </gazebo>

</robot>
