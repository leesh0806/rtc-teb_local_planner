  <!-- ========================================================================== -->
  <!-- GAZEBO PLUGINS FOR IGNITION GAZEBO (FORTRESS)                             -->
  <!-- ========================================================================== -->
  
  <!-- ========== DELETED: All Gazebo Classic plugins ========== -->
  <!-- 
  The following 5 Gazebo Classic differential drive plugins were removed:
  - cugo_diff_drive
  - cugo_diff_drive_mini_front  
  - cugo_diff_drive_mini_back
  - cugo_diff_drive_big_front
  - cugo_diff_drive_big_back
  
  These used libgazebo_ros_diff_drive.so which is incompatible with Ignition Gazebo
  -->

  <!-- ========== NEW: Ignition Gazebo Differential Drive Plugin ========== -->
  <!--
  This single plugin replaces all 5 Gazebo Classic diff_drive plugins
  It controls multiple drive wheels per side for better traction on slopes
  Left side: center 1, 2, 3 wheels
  Right side: center 1, 2, 3 wheels
  -->
  <gazebo>
    <plugin filename="ignition-gazebo-diff-drive-system" 
            name="ignition::gazebo::systems::DiffDrive">
      
      <!-- Left side drive wheel joints (ALL wheels for maximum traction) -->
      <left_joint>left_front_wheel_joint</left_joint>
      <left_joint>left_center_1_wheel_joint</left_joint>
      <left_joint>left_center_2_wheel_joint</left_joint>
      <left_joint>left_center_3_wheel_joint</left_joint>
      <left_joint>left_back_wheel_joint</left_joint>
      
      <!-- Right side drive wheel joints (ALL wheels for maximum traction) -->
      <right_joint>right_front_wheel_joint</right_joint>
      <right_joint>right_center_1_wheel_joint</right_joint>
      <right_joint>right_center_2_wheel_joint</right_joint>
      <right_joint>right_center_3_wheel_joint</right_joint>
      <right_joint>right_back_wheel_joint</right_joint>
      
      <!-- Wheel separation (tread width) in meters -->
      <wheel_separation>0.460</wheel_separation>
      
      <!-- Wheel radius in meters -->
      <wheel_radius>0.03858</wheel_radius>
      
      <!-- Odometry publishing frequency in Hz -->
      <odom_publish_frequency>50</odom_publish_frequency>
      
      <!-- Command velocity topic (subscribes) -->
      <topic>cmd_vel</topic>
      
      <!-- Odometry topic (publishes) -->
      <odom_topic>/odom</odom_topic>
      
      <!-- Enable TF publishing (odom -> base_footprint) -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      
      <!-- TF topic for coordinate transformations -->
      <tf_topic>/tf</tf_topic>
      
      <!-- Odometry parent frame -->
      <frame_id>odom</frame_id>
      
      <!-- Robot base frame (child of odom) -->
      <child_frame_id>base_footprint</child_frame_id>
      
      <!-- Maximum linear acceleration in m/s^2 -->
      <max_linear_acceleration>1.0</max_linear_acceleration>
      
      <!-- Maximum angular acceleration in rad/s^2 -->
      <max_angular_acceleration>2.0</max_angular_acceleration>
      
      <!-- Maximum linear velocity in m/s (3.5 km/h = 0.972 m/s) -->
      <min_velocity>-1.0</min_velocity>
      <max_velocity>1.0</max_velocity>
      
    </plugin>
  </gazebo>

  <!-- ========== Joint State Publisher Plugin ========== -->
  <gazebo>
    <plugin filename="ignition-gazebo-joint-state-publisher-system"
            name="ignition::gazebo::systems::JointStatePublisher">
      <!-- All wheel joints -->
      <joint_name>left_center_2_wheel_joint</joint_name>
      <joint_name>right_center_2_wheel_joint</joint_name>
      <joint_name>left_center_1_wheel_joint</joint_name>
      <joint_name>right_center_1_wheel_joint</joint_name>
      <joint_name>left_center_3_wheel_joint</joint_name>
      <joint_name>right_center_3_wheel_joint</joint_name>
      <joint_name>left_front_wheel_joint</joint_name>
      <joint_name>right_front_wheel_joint</joint_name>
      <joint_name>left_back_wheel_joint</joint_name>
      <joint_name>right_back_wheel_joint</joint_name>
    </plugin>
  </gazebo>

