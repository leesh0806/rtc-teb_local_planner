  </xacro:gazebo_material>

  <!-- Body collision box -->
  <xacro:gazebo_material ref="body_collision" mu="0.8">
    <material>Gazebo/GreyTransparent</material>
  </xacro:gazebo_material>

  <!-- ========== 3D LiDAR Sensor (Ouster OS1) ========== -->
  <!--
  Ouster OS1 3D LiDAR specifications (시뮬레이션 최적화 버전):
  - 32 vertical channels (원본 64의 50%)
  - 720 horizontal samples (원본 1024의 70%)
  - 360-degree horizontal FOV
  - Range: 0.5m to 120m
  - Update rate: 10 Hz
  
  총 포인트/프레임: 720 × 32 = 23,040 (원본 65,536의 약 35%)
  시뮬레이션 성능과 센서 품질의 균형을 맞춘 설정입니다.
  -->
  <xacro:arg name="namespace" default=""/>
  <xacro:ouster_os1
    name="ouster"
    parent_link="base_link"
    cap="halo"
    base="base"
    samples_h="720"
    min_ang_h="${-pi}"
    max_ang_h="${pi}"
    samples_v="32"
    min_ang_v="${-16.6 * pi/180}"
    max_ang_v="${16.6 * pi/180}"
    update_rate="10"
    min_range="0.5"
    max_range="120.0">
    <!-- Mount position: centered on robot, 0.15m above base_link -->
    <origin xyz="0.0 0.0 0.15" rpy="0 0 0"/>
  </xacro:ouster_os1>

  <!-- ========== IMU Sensor ========== -->
  
  <!-- IMU joint (fixed to base_link) -->
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <!-- Position: centered on robot body, 3cm above base_link (lowered for stability) -->
    <origin xyz="0.0 0.0 0.03" rpy="0 0 0"/>
  </joint>

  <!-- IMU link with visual representation -->
  <link name="imu_link">
    <visual>
      <geometry>
        <!-- Small box representing IMU sensor -->
        <box size="0.03 0.03 0.02"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <geometry>
        <!-- Small box representing IMU sensor -->
        <box size="0.03 0.03 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1e-4" iyy="1e-4" izz="1e-4"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- ========== Ignition Gazebo IMU Sensor ========== -->
  <!--
  IMU sensor provides:
  - Linear acceleration (with gravity)
  - Angular velocity (gyroscope)
  - Orientation (computed from accelerometer + gyroscope)
  
  NOTE: This follows the same pattern as the LiDAR sensor above
  No separate plugin tag needed - Ignition handles it internally
  -->
  <gazebo reference="imu_link">
    <sensor name="imu_sensor" type="imu">
      <!-- Sensor pose relative to parent link -->
      <pose>0 0 0 0 0 0</pose>
      
      <!-- ROS topic name for IMU messages -->
      <topic>imu</topic>
      
      <!-- Update rate in Hz -->
      <update_rate>100</update_rate>
      
      <!-- Keep sensor always active -->
      <always_on>1</always_on>
      
      <!-- Visualize IMU orientation in Gazebo GUI -->
      <visualize>true</visualize>
      
      <!-- IMU configuration -->
      <imu>
        <!-- Enable orientation output -->
        <orientation_enabled>true</orientation_enabled>
        
        <!-- Angular velocity (gyroscope) noise parameters -->
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </z>
        </angular_velocity>
        
        <!-- Linear acceleration (accelerometer) noise parameters -->
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>
      
      <!-- Frame ID for TF transformations -->
      <!-- This must match the link name for proper TF tree -->
      <ignition_frame_id>imu_link</ignition_frame_id>
    </sensor>
  </gazebo>

</robot>
